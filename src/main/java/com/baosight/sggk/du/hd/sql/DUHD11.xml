	</insert>
  
	<delete id="delete">
		DELETE FROM iplat4j.t_hd_facility_costs_formula WHERE 
			FORMULAID = #formulaid#
	</delete>

	<update id="update">
		UPDATE iplat4j.t_hd_facility_costs_formula 
		SET 
					FORMULANAME	= #formulaname#,   <!-- 费用名称 -->  
					FORMULA	= #formula#  <!-- 计算公式 -->  
			WHERE 	
			FORMULAID = #formulaid#
