        RATEDPOWER,  <!-- 额度功率（kw） -->
        FREQUENCY,  <!-- 变频(hz) -->
        CAPACITY,  <!-- 脱除能力(吨/年)、处理能力(万立或万吨)、处理量(万立/时) -->
        TECHNIQUE,  <!-- 治理方式 -->
        SPEC,  <!-- 烧结机规格（m²） -->
        HEIGHT,  <!-- 焦炉炭化室高度 -->
        HOLE,  <!-- 焦炉孔数 -->
        VOLUME,  <!-- 高炉有效容积(m³) -->
        WEIGHT,  <!-- 转炉公称容量(吨) -->
        VARIETY,  <!-- 轧机品种及规格 -->
        ISTL,  <!-- 是否脱硫   01：是   02：否 -->
        ISTX  <!-- 是否脱销    01：是   02：否 -->
        )
        VALUES (#facilityid#, #djRatedpower#, #ratedpower#, #frequency#, #capacity#, #technique#, #spec#, #height#,
